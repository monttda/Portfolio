%td.hoffset5
  %table.main-bar-content
    %thead
    %tbody
      %tr
        %td.col-xs-12
          %div.glyphicon.glyphicon-triangle-top.inline-arrow
          %div.main-text.no-underline
            -if @story.url.present?
              = link_to @story.title, @story.url
            -else
              = @story.title
          %div.sub-text.text-left.hoffset3
            = "#{@story.points} #{t('general.points_by')} #{@story.user.email}| #{time_ago_in_words(story.created_at)} #{t('general.ago')}"
            |
            = link_to t('general.show'), @story
            -if current_user.id == @story.user_id
              |
              = link_to t('general.edit'), edit_story_path(@story)
              |
              = link_to t('general.delete'), @story, :method => :delete, :data => { :confirm => t('general.confirm') }
          .voffset4.main-bar-content
            .row-fluid.span1
              =form_for @comment do |f|
                =f.hidden_field :story_id ,value: @story.id
                =f.hidden_field :user_id, value: current_user.id
                =f.text_area :text, size: "49x4"
                .voffset2
                  =f.submit t('comment.add')
            =render 'comments/comments_list', comments: @comments
