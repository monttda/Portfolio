%td
  %table.main-bar-content
    %thead
    %tbody
      - @stories.each do |story|
        %tr
          %td
            -unless !user_signed_in? || @liked_stories.include?(story.id)
              =button_to "/story_likes/?story_id=#{story.id}&user_id=#{story.user_id}",
                        method: :create,
                        class: ['button-as-no-button'],
                        form_class: ['inline-arrow'],
                        id: "story_#{story.id}",
                        remote: true do
                %div.glyphicon.glyphicon-triangle-top.inline-arrow.button-as-no-button
              -offset_class = ''
            -else
              -offset_class = 'hoffset3'
            %div.main-text.no-underline.near_like{class: "#{offset_class}"}
              -if story.url.present?
                = link_to story.title, url_for(story.url)
              -else
                = link_to story.title, story_path(story)
            %div.sub-text.text-left.hoffset3
              = "#{story.points} #{t('general.points_by')} #{story.user.email} | #{time_ago_in_words(story.created_at)} #{t('general.ago')}"
              |
              = link_to t('general.show'), story
              -if user_signed_in? && current_user.id == story.user_id
                |
                = link_to t('general.edit'), edit_story_path(story)
                |
                = link_to t('general.destroy'), story, :method => :delete, :data => { :confirm => t('general.confirm') }

      %tr
        %td
          = will_paginate @stories, page_links: false
