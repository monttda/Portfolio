%td
  %table.main-bar-content
    %thead
    %tbody
      - @stories.each do |story|
        %tr
          %td
            %div.glyphicon.glyphicon-triangle-top.inline-arrow
            %div.main-text.no-underline
              -if story.url.present?
                = link_to story.title, url_for(story.url)
              -else
                = story.title
            %div.sub-text.text-left.hoffset3
              = "#{story.points} #{t('general.points_by')} #{story.user.email} "
              = link_to t('general.show'), story
              -if current_user.id == story.user_id
                = link_to t('general.edit'), edit_story_path(story)
                = link_to t('general.destroy'), story, :method => :delete, :data => { :confirm => 'Are you sure?' }

      %tr
        %td
          = will_paginate @stories, page_links: false
